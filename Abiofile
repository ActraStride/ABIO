# Archivo de configuración general para el agente de IA - config.abio

agent:
  name: "ABIO"                                   # (str) Nombre del agente de IA.
  version: "1.0.0"                               # (str) Versión del agente.
  description: "ABIO es un asistente de IA para conversación general y apoyo inteligente en tareas."  # (str) Descripción breve de la funcionalidad del agente.
  environment: "development"                     # (str) Entorno en el que se ejecuta el agente (development, production, test).

chat:
  default_model: "models/gemini-1.5-flash"       # (str) Modelo de IA predeterminado para las interacciones.
  temperature: 0.7                               # (float) Controla la aleatoriedad de las respuestas. Valores bajos hacen que las respuestas sean más deterministas.
  top_p: 0.9                                     # (float) Controla la diversidad del contenido generado. Valores bajos lo hacen más enfocado.

context:
  message_limit: 20                              # (int) Número máximo de mensajes que se mantienen en el contexto de la conversación.
  context_messages:                               # (list) Lista de mensajes iniciales para establecer el contexto.
    - role: "system"
      content: "Eres ABIO, un asistente de IA útil y bien informado, listo para ayudar al usuario con cualquier tarea o pregunta."

meta:
  created_by: "Tu Nombre"                        # (str) Nombre de quien creó este archivo de configuración.
  created_at: "2025-04-18"                       # (str) Fecha de creación del archivo.
  last_updated: "2025-04-18"                     # (str) Fecha de la última modificación.
